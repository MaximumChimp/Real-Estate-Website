<% layout('layout/template') %> 
<link rel="stylesheet" href="/css/index.css">
<div class="card-container d-flex justify-content-center flex-wrap flex-row ">
        <% for(let product of products) { %>
            
            
            <div class="card mb-5 me-3">
                <div class="row">
                    <div class="col-md-4" style="height:100%">
                        <img src="<%= product.image %>" class="img-fluid"  alt="...">
                    </div>
                    <div class="col-md-8 d-flex justify-content-center ">
                        <div class="card-body">
                      
                            <p class="card-text">
                                <i class="fa-solid fa-square" style="font-size:10px;color: blue;" id="category"></i> <small><%= product.category %></small>
                            </p>
                       
                            <h5 class="card-title"> 
                                <strong><%= product.name %></strong><br>
                            </h5>
                            <p class="card-text">
                                <small>
                                   <strong><i class="fa-solid fa-peso-sign"></i><%= product.price %> / night</strong> 
                                </small>
                            </p>
                            <p class="card-text">
                                <%= product.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <a href="" id="location"><i class="fa-solid fa-location-dot" style="color:#bd2f20 ;"></i> <%= product.location %></a>
                                </small>
                            </p>
                            <a href="/products/<%= product._id %>" class="btn btn-outline-primary"><strong>View details</strong></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %> 
            
</div>
